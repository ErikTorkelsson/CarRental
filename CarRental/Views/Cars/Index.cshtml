@model IEnumerable<CarRental.Models.Car>

@{
    ViewData["Title"] = "Index";
}

<h1>Cars</h1>


<div class="container">
    @foreach (var car in Model)
    {
        <div class="card">
            <img src=@car.ImgSrc class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@car.Brand  @car.Model </h5>
                <p class="card-text">@car.about</p>
                <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">Show</a>
            </div>
        </div>
    }
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
